{
  "swagger": "2.0",
  "info": {
    "title": "Car Rental API",
    "description": "API for managing car rentals, vehicles, and locations.",
    "version": "1.0.0"
  },
  "host": "your-app.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/api/cars": {
      "get": {
        "summary": "Retrieve all cars",
        "responses": {
          "200": { "description": "Success" },
          "500": { "description": "Server Error" }
        }
      },
      "post": {
        "summary": "Add a new car to inventory",
        "parameters": [{
          "name": "body",
          "in": "body",
          "schema": { "$ref": "#/definitions/Car" }
        }],
        "responses": {
          "201": { "description": "Car Created" },
          "400": { "description": "Validation Error" }
        }
      }
    },
    "/api/cars/{id}": {
      "put": {
        "summary": "Update car details",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "name": "body", "in": "body", "schema": { "$ref": "#/definitions/Car" } }
        ],
        "responses": { "204": { "description": "Updated" } }
      },
      "delete": {
        "summary": "Delete a car",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "Deleted" } }
      }
    }
  },
  "definitions": {
    "Car": {
      "type": "object",
      "required": ["make", "model", "year", "dailyRate"],
      "properties": {
        "make": { "type": "string", "example": "Toyota" },
        "model": { "type": "string", "example": "Camry" },
        "year": { "type": "integer", "example": 2022 },
        "dailyRate": { "type": "number", "example": 45.00 }
      }
    }
  }
}